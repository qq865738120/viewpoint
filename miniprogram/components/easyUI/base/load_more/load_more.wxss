/* component/base/load_more/load_more.wxss */
.component {
  display: flex;
  align-items: center;
  justify-content: center;
}
.left, .right {
  height: 1px;
  width: 26%;
}
.text {
  margin: 0 16rpx;
}
.loading {
  display: inline-block;
  vertical-align: middle;
  width: 14px;
  height: 14px;
  background: transparent;
  border-radius: 50%;
  animation: btn-spin 0.6s linear;
  animation-iteration-count: infinite;
}
@keyframes btn-spin {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}