/* miniprogram/pages/room/room.wxss */

.page-room {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  position: relative;
}

.player {
  width: 100vw;
  height: 100vh;
}

.tip-toast {
  position: absolute;
  top: 40vh;
  width: 70vw;
  left: 15vw;
  border-radius: 12rpx;
  height: 20vh;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tip-toast view {
  padding: 20rpx 0;
  font-size: 32rpx;
}

.bottom-bar {
  position: absolute;
  z-index: 1000;
  bottom: 0;
  left: 0;
  right: 0;
  width: 690rpx;
  padding: 30rpx;
}

.bottom-bar-title {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: rgba(255, 255, 255, 1);
  line-height: 42rpx;
  padding-bottom: 20rpx;
}

.bottom-bar-button {
  border-top: 1px solid rgba(163, 167, 170, 0.5);
  padding: 20rpx 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-button {
  position: absolute;
  top: 54rpx;
  z-index: 1000;
}

.popup {
  position: absolute;
  z-index: 100000;
  width: 100vw;
  height: 100vh;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-content {
  background-color: white;
  margin: 0 60rpx;
  border-radius: 20rpx;
  padding: 60rpx;
  width: 600rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 1000;
  text-align: center;
}

.popup-desc {
  font-size: 32rpx;
  text-align: center;
  color: #666;
  margin: 60rpx 0;
}

.popup-button {
  background-color: #fe2c54;
  color: white;
}

.share-warp {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.share-popup {
  position: absolute;
  z-index: 100000;
  width: 630rpx;
  height: 328rpx;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 50rpx 60rpx;
  background-color: white;
}

.share-popup-title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-popup-title-line {
  width: 60rpx;
  border-bottom: 1px solid rgba(51, 51, 51, 1);
}

.share-popup-content {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

.share-popup-content-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: unset;
  background-color: unset;
}

button::after {
  border: none;
}

.share-popup-image {
  width: 120rpx;
  height: 120rpx;
}

.share-popup-content-text {
  font-size: 28rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
  margin-top: 15rpx;
}

.share-popup-content-line {
  width: 1rpx;
  height: 80rpx;
  background: rgba(230, 230, 230, 1);
  margin: 0 107rpx;
}

.play-icon {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 46%;
  left: 46%;
  z-index: 100;
  opacity: 0.3
}